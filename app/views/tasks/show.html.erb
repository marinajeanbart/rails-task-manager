<h1><%= @task.title %></h1>

<p><%= @task.details%></p>
<p><%= @task.completed%></p>

<%=link_to "Edit this task", edit_path %>

<%=link_to "All tasks", tasks_path %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
